                                 <option value="Drop off">Drop off</option>
                              </select>
                           </div>
                           <div class="form-group col-lg-6 newPost">
                              <label for="exampleInputEmail1" class="newPostLabel">Expiration</label>
                              <select name="duration" id="" class="form-control newPost">
                                 <option value="12 Hours">12 Hours</option>
                                 <option value="24 Hours">24 Hours</option>
                              </select>
                           </div>
                           <div class="form-group col-lg-6">
                              <label for="" class="newPostLabel">Categories</label>
                              <select name="category" id="" class="form-control newPost">
                                 <option value="furniture">Furniture</option>
                                 <option value="accessories">Accessories</option>
                                 <option value="winterGear">Winter Gear</option>
                                 <option value="shoes">Shoes</option>
                                 <option value="kitchenware">Kitchenware</option>
                                 <option value="makeup">Makeup</option>
                                 <option value="games">Games</option>
                                 <option value="skincare">Skincare</option>
