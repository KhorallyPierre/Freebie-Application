                              <select name="RandomChoice" id="" class="form-control newPost">
                                 <option value="Random Winner">Random Winner</option>
                                 <option value="User Choice">User Choice</option>
                              </select>
                           </div>
                           <div class="form-group col-lg-12">
                              <label for="exampleInputNumber1" class="newPostLabel">Description</label>
